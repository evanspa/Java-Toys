package name.paulevans.sampleprojects.command.server.productpriceresolver;

import java.math.BigDecimal;

import name.paulevans.sampleprojects.model.Product;

/**
 * <p>Simple interface used to get the retail price of a product</p>
 * 
 * @author Paul R Evans
 * @version $Id$
 *
 */
public interface ProductPriceResolver {
	
	/**
	 * <p>Returns the retail price of the specific product.</p>
	 * 
	 * @param pProduct the product
	 * 
	 * @return the retail price of the specific product
	 */
	BigDecimal getRetailPrice(Product pProduct);

}
